# =============================================================================
# CulturalTruth MCP Environment Configuration
# Copy this file to .env and fill in your actual values
# =============================================================================

# REQUIRED: Qloo API Configuration
QLOO_API_KEY=your_qloo_api_key_here

# OPTIONAL: API Settings
API_TIMEOUT=10000
QLOO_BASE_URL=https://api.qloo.com

# OPTIONAL: Rate Limiting & Performance
RATE_LIMIT_PER_MINUTE=50
MAX_CACHE_SIZE=1000
CACHE_TTL_MS=300000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000

# OPTIONAL: Security Settings
HMAC_SECRET=your_32_character_secret_key_here
MAX_CONTENT_LENGTH=10000
ENABLE_DETAILED_LOGGING=true

# OPTIONAL: Audit & Compliance
MAX_AUDIT_TRAILS=1000
AUDIT_RETENTION_DAYS=30
WEBHOOK_URL=https://your-compliance-dashboard.com/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# OPTIONAL: Development Settings
NODE_ENV=production
DEBUG=cultural-truth:*
LOG_LEVEL=info