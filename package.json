{
  "name": "cultural-truth-mcp",
  "version": "2.0.0",
  "description": "CulturalTruth - Production-ready MCP for cultural intelligence and bias detection",
  "type": "module",
  "main": "build/js/index.js",
  "scripts": {
    "build": "npm run clean && tsc",
    "start": "node build/js/index.js",
    "dev": "ts-node --esm src/mcp/server.ts",
    "dev:watch": "ts-node --esm --watch src/mcp/server.ts",
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "lint:errors": "eslint src/**/*.ts --quiet",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "clean": "rimraf build",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint:check && npm run format:check",
    "docker:build": "docker build -t cultural-truth-mcp:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env cultural-truth-mcp:latest",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose up -d",
    "setup": "./setup.sh",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "precommit": "npm run validate",
    "postinstall": "npm run build"
  },
  "keywords": [
    "mcp",
    "cultural-intelligence",
    "bias-detection",
    "qloo",
    "compliance"
  ],
  "author": "Jackson Kasi <jacksonkasipeacock@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "limiter": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
